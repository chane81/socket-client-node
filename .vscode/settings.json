{
  // Editor 설정

  "editor.renderWhitespace": "all",
  "editor.tabSize": 2,
  "editor.renderIndentGuides": false,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.tslint": true
  },
  "editor.fontFamily": "Consolas, 'Courier New', monospace, 'Segoe UI emoji', 'Segoe UI Symbol'",

  // eslint 설정
  "eslint.autoFixOnSave": false,
  "eslint.alwaysShowStatus": true,

  // typescript 설정
  "typescript.locale": "ko",

  // perttier 설정
  "prettier.jsxSingleQuote": true,
  "prettier.tabWidth": 2,
  "prettier.useTabs": true,
  "prettier.typescriptEnable": ["typescript", "typescriptreact"],
  "prettier.printWidth": 80,
  "prettier.singleQuote": true,
  "prettier.bracketSpacing": true,
  "prettier.trailingComma": "none",
  "prettier.flattenTernaries": false,

  // folter exclude
  "search.exclude": {
    ".git": true,
    ".tscache": true,
    "bower_components": true,
    "bin": true,
    "build": true,
    "lib": true,
    "node_modules": true
  },

  // files 설정
  "files.autoSave": "onFocusChange",
  "files.defaultLanguage": "ko",

  // 테마 설정
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Cobalt2",

  // 터미널 설정
  "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\cmd.exe",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "underline",
  "terminal.integrated.shellArgs.windows": ["/K", "chcp 65001"],
  "terminal.integrated.fontFamily": "Lucida console, Consolas, 'Courier New', monospace, 'Segoe UI emoji', 'Segoe UI Symbol'",
  "terminal.integrated.fontSize": 14,

  // 기타 설정
  "git.autofetch": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "sync.gist": "22d8153e6726882b514d8cab04b44d44",
  "javascript.updateImportsOnFileMove.enabled": "always",

  // tslint config 파일 path
  "tslint.configFile": "./config/tslint.json"
}
